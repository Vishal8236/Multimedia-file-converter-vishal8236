<div class="singup-box">
  <div class="signup-head">
    <h2>Sign up</h2>
  </div>
  <div class="singup-form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= fa_icon "user-circle-o" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"Enter full name" %>
      </div>
      
      <div class="field">
        <%= fa_icon "envelope" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Enter email" %>
      </div>
      <div class="field">
        <%= fa_icon "phone-square" %>
        <%= f.text_field :phone, autofocus: true, autocomplete: "phone", placeholder:"Enter phone number" %>
      </div>
      
      <div class="field">
        <%= fa_icon "map-marker" %>
        <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder:"Enter address" %>
      </div>
      
      <div class="field">
        <%= fa_icon "unlock-alt" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder:"password (6 characters minimum)" %>
      </div>
  
      <div class="field">
        <%= fa_icon "unlock-alt" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"confirm password" %>
      </div>
  
      <div class="signup-actions">
        <%= f.submit "Sign up" %><br />
      </div>
      <div class="signup-login-actions">
        <%= link_to "Existing User? Log in", new_session_path(resource_name) %>
      </div>
    <% end %>
  </div>
</div>
