<%= javascript_pack_tag 'edit_profile' %>
<div class="editbox-box">
  <div class="editbox-head">
    <h2>Edit Profile</h2>
  </div>
  <div class="editbox-form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="e-field">
        <%= fa_icon "user-circle-o" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="e-field">
        <%= fa_icon "envelope" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="e-field">
        <%= fa_icon "phone-square" %>
        <%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
      </div>
      
      <div class="e-field">
        <%= fa_icon "map-marker" %>
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="e-field">
        <%= fa_icon "unlock-alt" %>
        <%= f.password_field :current_password, autocomplete: "current-password", placeholder:'we need your current password to confirm your changes', required:true %>
      </div>

      <div class="update-password-btn" id="show-e-box">
        <div class="e-pass-msg">
          <span>Update Password</span> <br>
          <i>(leave blank if you don't want to change it)</i>
        </div>
        <span id="show-password-edit" ><%= fa_icon "sort-desc" %></span>
      </div>
      <div class="pass-edit-box">
        <div class="e-field">
          <%= fa_icon "unlock-alt" %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder:"Enter new password" %>
        </div>
        <div class="e-field">
          <%= fa_icon "unlock-alt" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Password confirmation" %>
        </div>
      </div>


      <div class="editbox-actions">
        <%= f.submit "Update" %>
      </div>
    <% end %>
  </div>    
  <div class="edit-back">
    <div>
      <%= link_to "Back To Home", :back %>
    </div>
  </div>
</div>